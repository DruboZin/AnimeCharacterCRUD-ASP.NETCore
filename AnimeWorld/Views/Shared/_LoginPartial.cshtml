@using Microsoft.AspNetCore.Identity
@using AnimeWorld.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <span class="nav-link text-dark">Hello, @UserManager.GetUserName(User)!</span>
        </li>
        <li class="nav-item">
            <form asp-area="Identity" asp-page="/Account/Logout" method="post" id="logoutForm" class="d-inline">
                <button type="submit" class="nav-link btn btn-link text-dark border-0 p-0">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
    }
</ul>

