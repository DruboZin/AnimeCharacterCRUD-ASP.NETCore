        <label asp-for="GenresId" class="form-label">Genre</label>
        <select asp-for="GenresId" asp-items="ViewBag.Genres" class="form-select">
            <option value="">-- Select Genre --</option>
        </select>
        <span asp-validation-for="GenresId" class="text-danger"></span>
    </div>

    <hr />
    <h4>Anime List</h4>
    <table class="table" id="animeTable">
        <thead><tr><th>Animation Name</th><th>Total Episodes</th><th>On Going?</th><th></th></tr></thead>
        <tbody>
            @for (int i = 0; i < animeList.Count; i++)
            {
                <tr>
                    <td>
                        <input name="AnimeNames[@i].AnimeNameId" type="hidden" value="@animeList[i].AnimeNameId" />
                        <input name="AnimeNames[@i].AnimationName" class="form-control" value="@animeList[i].AnimationName" />
